
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VZW Career"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textColor="#000000"
        android:id="@+id/topLogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passport"
        android:drawablePadding="@dimen/abc_edit_text_inset_top_material"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/abc_floating_window_z"
        android:id="@+id/topLogo2" />


    <ImageView
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/imageView"
        android:layout_below="@+id/topLogo2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/passport_icon"
        android:layout_marginBottom="13sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text=""
        android:textAlignment="center"
        android:id="@+id/error"
        android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:layout_marginRight="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:layout_marginBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:layout_below="@+id/imageView"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:textColorHint="#959595"
        android:textColor="#333333"
        android:hint="Username"
        android:background="@drawable/underline"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/error"
        android:textCursorDrawable="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/underline"
        android:textCursorDrawable="@null"
        android:textColor="#333333"
        android:textColorHint="#959595"
        android:hint="Password"
        android:id="@+id/pw"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="SIGN IN"
        android:id="@+id/signButton"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttons"
        android:layout_below="@+id/pw"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:textColor="#959595"
        android:layout_below="@+id/signButton"
        android:layout_centerInParent="true"
        android:text="forgot password?" />


</RelativeLayout>

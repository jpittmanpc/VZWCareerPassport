<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#C3C3C3"
    android:baselineAligned="false"
    android:longClickable="true"
    android:weightSum="1">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dip"
    android:layout_marginTop="20dp"
    android:padding="20dip"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
    android:id="@+id/top"
    android:background="#FFFFFF"

    android:layout_gravity="top|center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layoutMode="opticalBounds"
        android:touchscreenBlocksFocus="false">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dip"

    android:id="@+id/name"
    android:textColor="#CD040B"
    android:text="Christina Bishop"
    android:textSize="@dimen/abc_text_size_headline_material"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="Tech Support"
        android:textColor="#333333"
        android:id="@+id/dept"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/dept"
    android:text="0"
    android:layout_marginLeft="30dp"
        android:textColor="#333333"
        android:textSize="30dp"
        android:paddingTop="15dip"

    android:id="@+id/achievementNumber"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Achievements"
        android:textColor="#333333"
        android:layout_below="@+id/achievementNumber"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dept"
        android:text="0"
        android:layout_marginLeft="30dp"
        android:textColor="#333333"
        android:textSize="30dp"
        android:paddingTop="15dip"
        android:id="@+id/percentage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dept"
        android:textColor="#333333"
        android:textSize="30dp"
        android:paddingTop="15dip"
        android:text="0%"
        android:layout_alignParentRight="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:id="@+id/pctText"
        android:textColor="#333333"
        android:layout_below="@+id/achievementNumber"
        android:layout_alignParentRight="true"

        />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/badges"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACHIEVEMENTS"
            android:paddingLeft="5dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/achText"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:textColor="#000"
            android:background="#C3C3C3"
            android:layout_height="3dp"
            android:layout_below="@+id/achText"
            android:id="@+id/textView" />
        </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#FFF"
        android:id="@+id/toprow"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/badges">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ach1"
            android:text="1"
            android:background="@drawable/trophy"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ach2"
            android:text="2"
            android:background="@drawable/trophy"
             />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ach3"
            android:text="3"
            android:background="@drawable/trophy"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ach4"
            android:text="4"
            android:background="@drawable/trophy"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#FFF"
        android:id="@+id/bottomrow"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/toprow">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ach5"
            android:text="5"
            android:background="@drawable/trophy"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ach6"
            android:text="6"
            android:background="@drawable/trophy"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ach7"
            android:text="7"
            android:background="@drawable/trophy"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ach8"
            android:text="8"
            android:background="@drawable/trophy"
            />
    </LinearLayout>

</RelativeLayout>
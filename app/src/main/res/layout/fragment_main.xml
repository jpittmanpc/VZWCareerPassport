<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#C3C3C3"
    android:baselineAligned="false"
    android:longClickable="true">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dip"
    android:layout_marginTop="10dp"
    android:padding="20dip"
    android:paddingRight="20dip"
    android:background="#FFFFFF"
    android:layout_gravity="top|center_horizontal">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dip"
    android:id="@+id/name"
    android:textColor="#CD040B"
    android:text="Christina Bishop"
    android:textSize="@dimen/abc_text_size_headline_material"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="Tech Support"
        android:textColor="#333333"
        android:id="@+id/dept"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/dept"
    android:text="0"
    android:layout_marginLeft="30dp"
    android:textColor="#333333"
    android:textSize="30dp"
    android:paddingTop="15dip"

    android:id="@+id/achievementNumber"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Achievements"
        android:textColor="#333333"
        android:layout_below="@+id/achievementNumber"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dept"
        android:text="0"
        android:layout_marginLeft="30dp"
        android:textColor="#333333"
        android:textSize="30dp"
        android:paddingTop="15dip"
        android:id="@+id/percentage"
        />
</RelativeLayout>
    <GridLayout
        android:layout_width="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="@integer/abc_config_activityShortDur"
        android:textColor="#333333"
        android:layout_below="@+id/percentage"
        />

</GridLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</LinearLayout>